<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:elevation="8dp"
    android:gravity="center"
    android:baselineAligned="false"> <LinearLayout
    android:id="@+id/btnTrangChu"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless">
    <ImageView
        android:id="@+id/imgTrangChu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_view"
        app:tint="#666666"/>
    <TextView
        android:id="@+id/tvTrangChu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trang chủ"
        android:textSize="11sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/btnThongKe"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/imgThongKe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="#666666"/>
        <TextView
            android:id="@+id/tvThongKe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê"
            android:textSize="11sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnCongCu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/imgCongCu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_manage"
            app:tint="#666666"/>
        <TextView
            android:id="@+id/tvCongCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công cụ"
            android:textSize="11sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnCaiDat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:id="@+id/imgCaiDat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="#666666"/>
        <TextView
            android:id="@+id/tvCaiDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="11sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>